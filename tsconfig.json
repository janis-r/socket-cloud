{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "removeComments": false,
    "sourceMap": true,
    "declaration": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "strictPropertyInitialization": false,
    "lib": [
      "es2015",
      "dom"
    ],
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "@deliveryProtocol/*": ["lib/deliveryProtocol/*"],
      "@deliveryProtocolClient/*": ["lib/deliveryProtocolClient/*"]
    }
  },
  "include": [
    "./src/"
  ]
}
